{
  "name": "playwright-dashboard",
  "version": "2.0.0",
  "description": "Centralized Playwright test dashboard for all platform projects (Vercel/Neon)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:ci": "jest --coverage --ci",
    "db:migrate": "psql $DATABASE_URL -f db/schema.sql"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "server.js",
      "!**/node_modules/**",
      "!**/e2e/**"
    ]
  }
}
